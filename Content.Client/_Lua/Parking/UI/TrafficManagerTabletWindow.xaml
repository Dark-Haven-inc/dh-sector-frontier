<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                      Title="{Loc 'traffic-manager-tablet-window-title'}"
                      SetSize="760 520">
    <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True">
        <BoxContainer Orientation="Horizontal" Margin="8 8 8 4">
            <Label Text="{Loc 'traffic-manager-tablet-heading'}" StyleClasses="LabelHeading" />
            <Control HorizontalExpand="True" />
            <Button Name="RefreshButton" Text="{Loc 'traffic-manager-tablet-button-refresh'}" />
        </BoxContainer>

        <Label Name="ErrorLabel" Margin="8 0 8 4" FontColorOverride="#ff6666" Visible="False" />

        <ScrollContainer HorizontalExpand="True" VerticalExpand="True" Margin="8">
            <BoxContainer Name="EntriesContainer"
                          Orientation="Vertical"
                          HorizontalExpand="True"
                          VerticalExpand="True"
                          SeparationOverride="6" />
        </ScrollContainer>
    </BoxContainer>
</controls:FancyWindow>



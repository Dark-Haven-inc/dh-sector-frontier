<DefaultWindow xmlns="https://spacestation14.io"
               xmlns:controls="clr-namespace:Robust.Client.UserInterface.Controls;assembly=Robust.Client"
               Title="{Loc 'company-invite-window-title'}"
               SetSize="420 160"
               MinSize="360 140">
    <BoxContainer Orientation="Vertical" Margin="8" SeparationOverride="8">
        <controls:RichTextLabel Name="InviteText" Access="Public" VerticalExpand="True" />
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True" SeparationOverride="8">
            <Control HorizontalExpand="True" />
            <Button Name="DeclineButton" Text="{Loc 'company-invite-decline'}" MinWidth="120"/>
            <Button Name="AcceptButton" Text="{Loc 'company-invite-accept'}" MinWidth="120"/>
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>

